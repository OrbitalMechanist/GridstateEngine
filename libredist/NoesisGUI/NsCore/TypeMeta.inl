namespace Noesis
{

template<class T> struct TypeTag;

////////////////////////////////////////////////////////////////////////////////////////////////////
template<class T> T* FindMeta(const TypeMeta* type)
{
    return (T*)(type->FindMeta(T::StaticGetClassType((TypeTag<T>*)nullptr)));
}

